<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fondo"
android:orientation="vertical"
tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:text="BIENVENIDO A LA CALCULADORA USANDO ACTIVITYS"
    android:textColor="@android:color/background_light"
    android:textAppearance="@style/TextAppearance.AppCompat.Small"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:background="@android:color/holo_blue_bright"
    android:onClick="cambiarabutton"
    android:text="BUTTON" />

<Button
    android:id="@+id/button2"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@android:color/holo_green_dark"
    android:onClick="cambiararadio"
    android:text="RADIOBUTTON" />

<Button
    android:id="@+id/button3"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@android:color/holo_orange_dark"
    android:onClick="cambiaracheck"
    android:text="CHECKBOX" />

<Button
    android:id="@+id/button4"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@android:color/holo_red_dark"
    android:onClick="cambiaraspinner"
    android:text="SPINNER" />

<Button
    android:id="@+id/button5"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:onClick="cambiaralist"
    android:text="LISTVIEW" />

</LinearLayout>